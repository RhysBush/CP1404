BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            font_size: 40
            on_text: app.handle_calculation(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2

            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate()

    Label:
        text: app.output_km
        font_size: 40
        color: (1, 1, 0, 1)
        id: output_label